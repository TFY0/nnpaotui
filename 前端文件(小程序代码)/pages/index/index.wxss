/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.search {
    height: 50rpx;
    display: flex;
    padding: 25rpx 20rpx;
    box-shadow: 0 0 10rpx #333;
    width: 80%;
    margin: 0 auto;
    border-radius: 10rpx;
    z-index: 99;
    position: relative;
    top: -30rpx;
    background: #fff;
}
.img{
  width:100%;
  height: 250px;
}
.nav{width:100%;height:100rpx;display:flex;flex-direction:row;padding-top: 20px;}
.default{line-height:100rpx;text-align:center;flex:1;border-bottom:1px solid gainsboro;color:#000;font-weight:bold;font-size:28rpx;}
.red{line-height:100rpx;text-align:center;color:#fc5558;flex:1;border-bottom:1px solid gainsboro;font-weight:bold;font-size:28rpx;}
.show{display:block;text-align:center;line-height:200rpx;}
.hidden{display:none;text-align:center;line-height:200px;}
.box
{
  margin: 10rpx 17rpx;
 width: 150rpx;
 float: left;
 border: 1rpx solid #ddd;
padding: 20rpx 0;
border-radius: 10rpx; 
}
.n-img
{
  width: 100rpx;
height: 100rpx;
margin: 0 auto;
border-radius: 10rpx;
}
.n-img image
{
  display: block;
width: 100rpx;
height: 100rpx;
margin: 0 auto;
}
.n-text
{
  width: 100%;
text-align: center;
line-height: 40rpx;
font-size: 28rpx;
}
.picker
{
  background-color: #000000; 
  opacity:0.5;
  color:white;
  border-radius: 10px;
  width:50px;
  padding: 0 10px;
}